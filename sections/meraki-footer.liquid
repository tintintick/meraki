{{ 'meraki-footer.css' | asset_url | stylesheet_tag }}
<script src="{{ 'meraki-footer.js' | asset_url }}" defer="defer"></script>

<footer class="meraki-footer design-scale" data-section-id="{{ section.id }}">
  <div class="footer-container">
    
    <div class="footer-main">
      <!-- Meraki Logo -->
      <div class="footer-logo">
        <img src="{{ 'footer/logo-white.svg' | asset_url }}" alt="Meraki" width="205" height="80" loading="lazy">
      </div>

      <!-- Social Media Icons -->
      {%- if section.settings.show_social -%}
        <div class="social-media-icons">
          {%- if settings.social_facebook_link != blank -%}
            <a href="{{ settings.social_facebook_link }}" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              <img src="{{ 'footer/Facebook.svg' | asset_url }}" alt="Facebook" width="60" height="60" loading="lazy">
            </a>
          {%- endif -%}
          {%- if settings.social_instagram_link != blank -%}
            <a href="{{ settings.social_instagram_link }}" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              <img src="{{ 'footer/Instagram.svg' | asset_url }}" alt="Instagram" width="60" height="60" loading="lazy">
            </a>
          {%- endif -%}
          {%- if settings.social_youtube_link != blank -%}
            <a href="{{ settings.social_youtube_link }}" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
              <img src="{{ 'footer/YouTube.svg' | asset_url }}" alt="YouTube" width="60" height="60" loading="lazy">
            </a>
          {%- endif -%}
          {%- if settings.social_tiktok_link != blank -%}
            <a href="{{ settings.social_tiktok_link }}" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
              <img src="{{ 'footer/tiktok.svg' | asset_url }}" alt="TikTok" width="60" height="60" loading="lazy">
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}

      <!-- Menu Container -->
      <div class="menu-container">
        <!-- Products Menu -->
        <div class="menu-group">
          <details id="Details-products-{{ section.id }}" class="footer-details">
            <summary class="menu-summary">
              <h2 class="menu-title">Products</h2>
              <div class="toggle-icon">
                <img src="{{ 'footer/footer-expanded.svg' | asset_url }}" alt="Collapse" class="icon-expanded">
                <img src="{{ 'footer/footer-collapsed.svg' | asset_url }}" alt="Expand" class="icon-collapsed">
              </div>
            </summary>
            <div class="menu-content">
              {%- if linklists['products'] != blank and linklists['products'].links.size > 0 -%}
                {%- for link in linklists['products'].links -%}
                  <a href="{{ link.url }}" class="menu-link">{{ link.title }}</a>
                {%- endfor -%}
              {%- else -%}
                <a href="#" class="menu-link">Espresso Machine</a>
                <a href="#" class="menu-link">Accessories</a>
                <a href="#" class="menu-link">Roaster Partners</a>
              {%- endif -%}
            </div>
          </details>
        </div>

        <!-- Company Menu -->
        <div class="menu-group">
          <details id="Details-company-{{ section.id }}" class="footer-details">
            <summary class="menu-summary">
              <h2 class="menu-title">Company</h2>
              <div class="toggle-icon">
                <img src="{{ 'footer/footer-expanded.svg' | asset_url }}" alt="Collapse" class="icon-expanded">
                <img src="{{ 'footer/footer-collapsed.svg' | asset_url }}" alt="Expand" class="icon-collapsed">
              </div>
            </summary>
            <div class="menu-content">
              {%- if linklists['company'] != blank and linklists['company'].links.size > 0 -%}
                {%- for link in linklists['company'].links -%}
                  <a href="{{ link.url }}" class="menu-link">{{ link.title }}</a>
                {%- endfor -%}
              {%- else -%}
                <a href="#" class="menu-link">About Us</a>
                <a href="#" class="menu-link">Contact Us</a>
                <a href="#" class="menu-link">Our Blog</a>
                <a href="#" class="menu-link">Affiliate Program</a>
              {%- endif -%}
            </div>
          </details>
        </div>

        <!-- Support Menu -->
        <div class="menu-group">
          <details id="Details-support-{{ section.id }}" class="footer-details">
            <summary class="menu-summary">
              <h2 class="menu-title">Support</h2>
              <div class="toggle-icon">
                <img src="{{ 'footer/footer-expanded.svg' | asset_url }}" alt="Collapse" class="icon-expanded">
                <img src="{{ 'footer/footer-collapsed.svg' | asset_url }}" alt="Expand" class="icon-collapsed">
              </div>
            </summary>
            <div class="menu-content">
              {%- if linklists['support'] != blank and linklists['support'].links.size > 0 -%}
                {%- for link in linklists['support'].links -%}
                  <a href="{{ link.url }}" class="menu-link">{{ link.title }}</a>
                {%- endfor -%}
              {%- else -%}
                <a href="#" class="menu-link">Service Request</a>
                <a href="#" class="menu-link">FAQ</a>
                <a href="#" class="menu-link">Shipping Policy</a>
                <a href="#" class="menu-link">Refund & Return</a>
                <a href="#" class="menu-link">Warranty</a>
                <a href="#" class="menu-link">Terms of Service</a>
                <a href="#" class="menu-link">Privacy Policy</a>
              {%- endif -%}
            </div>
          </details>
        </div>
      </div>
    </div>

    <!-- Footer Bottom: Copyright and Payment Icons -->
    <div class="footer-bottom">
      <!-- Copyright -->
      <div class="footer-copyright">
        <p>© 2025, Meraki Powered by Shopify</p>
      </div>

      <!-- Payment Icons -->
      {%- if section.settings.show_payment -%}
        <div class="payment-icons">
          {%- for type in shop.enabled_payment_types -%}
            <div class="payment-icon">
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Meraki Footer",
  "settings": [
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "paragraph",
      "content": "Social media links are configured in Theme Settings → Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Payment Methods"
    },
    {
      "type": "checkbox",
      "id": "show_payment",
      "label": "Show payment method icons",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Meraki Footer"
    }
  ]
}
{% endschema %}

