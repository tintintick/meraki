    endif
  endfor
-%}

{% liquid
  assign header_tag = 'div'

  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif
%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}
    data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% endif %}
  class="header-wrapper custom-header-wrapper color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  {%- liquid
    assign social_links = false
    assign localization_forms = false

    if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
      assign social_links = true
    endif

    if localization.available_countries.size > 1 and section.settings.enable_country_selector or section.settings.enable_language_selector and localization.available_languages.size > 1
      assign localization_forms = true
    endif
  -%}
  <header class="header custom-header design-scale page-width{% if social_links %} header--has-social{% endif %}{% if shop.customer_accounts_enabled %} header--has-account{% endif %}{% if localization_forms %} header--has-localizations{% endif %}">
    {%- comment -%} Close button (menu-open state only) {%- endcomment -%}
    <button class="header__close-button menu-open-only" aria-label="{{ 'sections.header.menu' | t }}">
      <img src="{{ 'header/menu-cross.svg' | asset_url }}" alt="Close" width="44" height="44">
    </button>

    {%- comment -%} Logo - Shared across mobile and desktop {%- endcomment -%}
    <div class="header__logo">
      {%- if request.page_type == 'index' -%}
        <h1 class="header__heading">
      {%- endif -%}
      <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
        {%- comment -%} Logo (White - Default) {%- endcomment -%}
        {%- if section.settings.logo_white != blank -%}
          {%- assign logo_white_alt = shop.name | escape -%}
          {{
            section.settings.logo_white
            | image_url: width: 266
            | image_tag:
              class: 'custom-header-logo',
              width: 133,
              height: 52,
              alt: logo_white_alt,
              loading: 'eager',
              preload: true
          }}
        {%- else -%}
          <img
            src="{{ 'header/logo-white.svg' | asset_url }}"
            alt="{{ shop.name | escape }}"
            class="custom-header-logo"
            width="133"
            height="52"
          >
        {%- endif -%}

        {%- comment -%} Logo (Black - Menu Open) {%- endcomment -%}
        {%- if section.settings.logo_black != blank -%}
          {%- assign logo_black_alt = shop.name | escape -%}
          {{
            section.settings.logo_black
            | image_url: width: 266
            | image_tag:
              class: 'custom-header-logo-menu-open menu-open-only',
              width: 133,
              height: 52,
              alt: logo_black_alt,
              loading: 'eager'
          }}
        {%- else -%}
          <img
            src="{{ 'header/logo-black.svg' | asset_url }}"
            alt="{{ shop.name | escape }}"
            class="custom-header-logo-menu-open menu-open-only"
            width="133"
            height="52"
          >
        {%- endif -%}
      </a>
      {%- if request.page_type == 'index' -%}
        </h1>
      {%- endif -%}
    </div>

    {%- comment -%} Mobile-only elements (< 990px) {%- endcomment -%}
    <div class="header__mobile-elements">
      <a href="/collections/all" class="header__order-button"> Order now </a>

      {%- if section.settings.menu != blank -%}
        <header-drawer data-breakpoint="tablet">
          <details id="Details-menu-drawer-container" class="menu-drawer-container">
            <summary
              class="header__icon header__icon--menu header__icon--summary link focus-inset"
              aria-label="{{ 'sections.header.menu' | t }}"
            >
              <img
                src="{{ 'menu-white.svg' | asset_url }}"
                alt="Menu"
                class="custom-header-menu-icon"
                data-menu-icon
                width="48"
                height="48"
              >
            </summary>
            {% render 'custom-header-drawer-menu' %}
          </details>
        </header-drawer>
      {%- endif -%}
    </div>

    {%- comment -%} Desktop-only elements (≥ 990px) {%- endcomment -%}
    <div class="header__desktop-elements">
      {%- comment -%} Desktop Navigation Menu {%- endcomment -%}
      {%- if section.settings.menu != blank -%}
        <nav class="header__desktop-nav">
          <ul class="header__desktop-menu list-menu" role="list">
            {%- for link in section.settings.menu.links -%}
              <li class="header__desktop-menu-item">
                <a
                  href="{{ link.url }}"
                  class="header__desktop-menu-link{% if link.current %} header__desktop-menu-link--active{% endif %}"
                  {% if link.current %}
                    aria-current="page"
                  {% endif %}
                >
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      {%- endif -%}

      {%- comment -%} Desktop Icons {%- endcomment -%}
      <div class="header__desktop-icons">
        {%- comment -%} Country Selector {%- endcomment -%}
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <localization-form data-prevent-hide>
            {%- form 'localization', id: 'HeaderCountryFormDesktop', class: 'localization-form' -%}
              <div>
                <h2 class="visually-hidden" id="HeaderCountryLabelDesktop">{{ 'localization.country_label' | t }}</h2>
                {%- render 'country-localization', localPosition: 'HeaderCountryDesktop' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {% endif %}

        {%- comment -%} Language Selector {%- endcomment -%}
        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <localization-form data-prevent-hide>
            {%- form 'localization', id: 'HeaderLanguageFormDesktop', class: 'localization-form' -%}
              <div>
                <h2 class="visually-hidden" id="HeaderLanguageLabelDesktop">{{ 'localization.language_label' | t }}</h2>
                {%- render 'language-localization', localPosition: 'HeaderLanguageDesktop' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- comment -%} Search Icon {%- endcomment -%}
        {% render 'header-search', input_id: 'Search-In-Modal-Desktop' %}

        {%- comment -%} Account/Login Icon {%- endcomment -%}
        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="header__icon header__icon--account link focus-inset"
            rel="nofollow"
          >
            {%- if section.settings.enable_customer_avatar -%}
              <account-icon>
                {%- if customer and customer.has_avatar? -%}
                  {{ customer | avatar }}
                {%- else -%}
                  <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
                {%- endif -%}
              </account-icon>
            {%- else -%}
              <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
            {%- endif -%}
            <span class="visually-hidden">
              {%- liquid
                if customer
                  echo 'customer.account_fallback' | t
                else
                  echo 'customer.log_in' | t
                endif
              -%}
            </span>
          </a>
        {%- endif -%}

        {%- comment -%} App Blocks {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
          {%- endcase -%}
        {%- endfor -%}

        {%- comment -%} Cart Icon {%- endcomment -%}
        <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
          {% if cart == empty %}
            <span class="svg-wrapper">{{ 'header/Cart.svg' | inline_asset_content }}</span>
          {% else %}
            <span class="svg-wrapper">{{ 'header/Cart.svg' | inline_asset_content }}</span>
          {% endif %}
          <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
          {%- if cart != empty -%}
            <div class="cart-count-bubble">
              {%- if cart.item_count < 100 -%}
                <span aria-hidden="true">{{ cart.item_count }}</span>
              {%- endif -%}
              <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
            </div>
          {%- endif -%}
        </a>
      </div>
    </div>
  </header>
</{{ header_tag }}>

{%- if settings.cart_type == 'notification' -%}
  {%- render 'cart-notification',
    color_scheme: section.settings.color_scheme,
    desktop_menu_type: section.settings.menu_type_desktop
  -%}
{%- endif -%}

{% javascript %}
  class StickyHeaderCustom extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.header = document.querySelector('.section-header');
      this.headerIsAlwaysSticky =
        this.getAttribute('data-sticky-type') === 'always' ||
        this.getAttribute('data-sticky-type') === 'reduce-logo-size';
      this.headerBounds = {};

      this.setHeaderHeight();

      window.matchMedia('(max-width: 990px)').addEventListener('change', this.setHeaderHeight.bind(this));

      if (this.headerIsAlwaysSticky) {
        this.header.classList.add('shopify-section-header-sticky');
      }

      this.currentScrollTop = 0;
      this.preventReveal = false;
      this.predictiveSearch = this.querySelector('predictive-search');

      this.onScrollHandler = this.onScroll.bind(this);
      this.hideHeaderOnScrollUp = () => (this.preventReveal = true);

      this.addEventListener('preventHeaderReveal', this.hideHeaderOnScrollUp);
      window.addEventListener('scroll', this.onScrollHandler, false);

      this.createObserver();
      this.switchIcons();
      this.setupLogoWatcher();
      this.setupMenuIconWatcher();
      this.setupMenuDrawerWatcher();

      // Handle logo and menu icon on window resize for desktop/mobile switching
      window.addEventListener('resize', () => {
        this.switchIcons();
      });
      this.switchIcons();
    }

    setHeaderHeight() {
      document.documentElement.style.setProperty('--header-height', `${this.header.offsetHeight}px`);
    }

    disconnectCallback() {
      this.removeEventListener('preventHeaderReveal', this.hideHeaderOnScrollUp);
      window.removeEventListener('scroll', this.onScrollHandler);
    }

    createObserver() {
      let observer = new IntersectionObserver((entries, observer) => {
        this.headerBounds = entries[0].intersectionRect;
        observer.disconnect();
      });

      observer.observe(this.header);
    }

    setupLogoWatcher() {
      const logoImg = document.querySelector('.custom-header-logo');
      if (!logoImg) return;

      const observer = new MutationObserver(() => {
        this.switchIcons();
      });

      observer.observe(this.header, { attributes: true, attributeFilter: ['class'] });
    }

    setupMenuIconWatcher() {
      const menuIcon = document.querySelector('.custom-header-menu-icon');
      if (!menuIcon) return;

      const observer = new MutationObserver(() => {
        this.switchIcons();
      });

      observer.observe(this.header, { attributes: true, attributeFilter: ['class'] });
    }

    switchIcons() {
      const isMobile = window.innerWidth < 990;
      const isScrolled = this.header.classList.contains('scrolled-past-header');

      // Switch Logo
      const logoImg = document.querySelector('.custom-header-logo');
      if (logoImg) {
        const currentSrc = logoImg.src;
        if (isMobile) {
          // Mobile: white at top, black when scrolled
          if (isScrolled && currentSrc.includes('logo-white')) {
            logoImg.src = currentSrc.replace('logo-white', 'logo-black');
          } else if (!isScrolled && currentSrc.includes('logo-black')) {
            logoImg.src = currentSrc.replace('logo-black', 'logo-white');
          }
        } else {
          // Desktop: always white
          if (currentSrc.includes('logo-black')) {
            logoImg.src = currentSrc.replace('logo-black', 'logo-white');
          }
        }
      }

      // Switch Menu Icon (mobile only)
      const menuIcon = document.querySelector('.custom-header-menu-icon');
      if (menuIcon && isMobile) {
        const currentSrc = menuIcon.src;
        // Mobile: white at top, black when scrolled
        if (isScrolled && currentSrc.includes('menu-white')) {
          menuIcon.src = currentSrc.replace('menu-white', 'menu-black');
        } else if (!isScrolled && currentSrc.includes('menu-black')) {
          menuIcon.src = currentSrc.replace('menu-black', 'menu-white');
        }
      }
    }

    setupMenuDrawerWatcher() {
      const menuDrawerContainer = document.querySelector('#Details-menu-drawer-container');
      if (!menuDrawerContainer) return;

      // Record whether header was scrolled before menu opened
      this.wasScrolledBeforeMenu = false;
      this.menuShouldResetOnClose = false;
      this.menuCloseHandledEarly = false;

      if (!this.menuOpenClassObserver) {
        this.menuOpenClassObserver = new MutationObserver(() => {
          const shouldReset =
            this.menuShouldResetOnClose &&
            !this.header.classList.contains('menu-open') &&
            !this.menuCloseHandledEarly;

          if (shouldReset) {
            this.resetHeaderToTopState();
            this.menuCloseHandledEarly = true;
            this.menuShouldResetOnClose = false;
          }
        });

        this.menuOpenClassObserver.observe(this.header, { attributes: true, attributeFilter: ['class'] });
      }

      menuDrawerContainer.addEventListener('toggle', () => {
        if (menuDrawerContainer.open) {
          // Menu opened - record current scroll state
          const scrollTop = window.pageYOffset || document.documentElement.scrollTop || 0;
          this.wasScrolledBeforeMenu = this.header.classList.contains('scrolled-past-header') || scrollTop > 0;
          this.currentScrollTop = scrollTop;
          this.menuShouldResetOnClose = !this.wasScrolledBeforeMenu;
          this.menuCloseHandledEarly = false;
          this.closeHandledByButton = false;
          // Force header to scrolled state (white background, black icons/text)
          this.header.classList.add('scrolled-past-header', 'menu-open');
          document.body.classList.add('menu-open');
          this.switchIcons();
        } else {
          // Menu closed - only handle if not already handled by close button
          if (!this.closeHandledByButton) {
            requestAnimationFrame(() => {
              if (!this.wasScrolledBeforeMenu && !this.menuCloseHandledEarly) {
                // If header was not scrolled before menu opened, restore top state
                this.header.classList.remove('scrolled-past-header');
              }
              // 立即移除 menu-open 类
              this.header.classList.remove('menu-open');
              document.body.classList.remove('menu-open');
              this.menuShouldResetOnClose = false;
              this.menuCloseHandledEarly = false;
              this.switchIcons();
            });
          }
          // Reset flag
          this.closeHandledByButton = false;
        }
      });

      // Setup close button in custom menu drawer
      this.setupCustomMenuCloseButton();
    }

    setupCustomMenuCloseButton() {
      const closeButton = document.querySelector('.header__close-button');
      const menuDrawerContainer = document.querySelector('#Details-menu-drawer-container');
      const headerDrawer = document.querySelector('header-drawer');
      const summaryElement = menuDrawerContainer?.querySelector('summary');
      
      if (closeButton && headerDrawer && summaryElement) {
        closeButton.addEventListener('click', (event) => {
          // 设置标志，表示关闭已由按钮处理
          this.closeHandledByButton = true;
          
          // 立即更新 header 状态，不等待 toggle 事件
          if (!this.wasScrolledBeforeMenu && !this.menuCloseHandledEarly) {
            this.header.classList.remove('scrolled-past-header');
          }
          this.header.classList.remove('menu-open');
          document.body.classList.remove('menu-open');
          this.menuShouldResetOnClose = false;
          this.menuCloseHandledEarly = false;
          this.switchIcons();
          
          // 调用 HeaderDrawer 的 closeMenuDrawer 方法，确保移除 overflow-hidden 类
          headerDrawer.closeMenuDrawer(event, summaryElement);
        });
      }
    }

    resetHeaderToTopState() {
      this.header.classList.remove(
        'scrolled-past-header',
        'shopify-section-header-hidden',
        'shopify-section-header-sticky',
        'animate'
      );
      this.currentScrollTop = window.pageYOffset || document.documentElement.scrollTop || 0;
      this.switchIcons();
    }

    onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      if (this.predictiveSearch && this.predictiveSearch.isOpen) return;

      if (scrollTop > this.currentScrollTop && scrollTop > 0) {
        this.header.classList.add('scrolled-past-header');
        if (this.preventHide) return;
        requestAnimationFrame(this.hide.bind(this));
      } else if (scrollTop < this.currentScrollTop && scrollTop > 0) {
        this.header.classList.add('scrolled-past-header');
        if (!this.preventReveal) {
          requestAnimationFrame(this.reveal.bind(this));
        } else {
          window.clearTimeout(this.isScrolling);

          this.isScrolling = setTimeout(() => {
            this.preventReveal = false;
          }, 66);

          requestAnimationFrame(this.hide.bind(this));
        }
      } else if (scrollTop <= 0) {
        this.header.classList.remove('scrolled-past-header');
        requestAnimationFrame(this.reset.bind(this));
      }

      this.currentScrollTop = scrollTop;
    }

    hide() {
      if (this.headerIsAlwaysSticky) return;
      this.header.classList.add('shopify-section-header-hidden', 'shopify-section-header-sticky');
      this.closeMenuDisclosure();
      this.closeSearchModal();
    }

    reveal() {
      if (this.headerIsAlwaysSticky) return;
      this.header.classList.add('shopify-section-header-sticky', 'animate');
      this.header.classList.remove('shopify-section-header-hidden');
    }

    reset() {
      if (this.headerIsAlwaysSticky) return;
      this.header.classList.remove('shopify-section-header-hidden', 'shopify-section-header-sticky', 'animate');
    }

    closeMenuDisclosure() {
      this.disclosures = this.disclosures || this.header.querySelectorAll('header-menu');
      this.disclosures.forEach((disclosure) => disclosure.close());
    }

    closeSearchModal() {
      this.searchModal = this.searchModal || this.header.querySelector('details-modal');
      this.searchModal.close(false);
    }
  }

  if (!customElements.get('sticky-header')) {
    customElements.define('sticky-header', StickyHeaderCustom);
  }
{% endjavascript %}

