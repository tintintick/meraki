{{ 'custom-awards.css' | asset_url | stylesheet_tag }}

<div class="custom-awards design-scale" data-section-id="{{ section.id }}">
  <div class="awards-container">
    <!-- Title -->
    {%- if section.settings.title != blank -%}
      <h2 class="awards-title">{{ section.settings.title }}</h2>
    {%- endif -%}

    <!-- Awards Grid -->
    <div class="awards-grid">
      <!-- Award 1 -->
      <div class="award-item award-1">
        {%- if section.settings.award1_image != blank -%}
          <img
            class="award-image"
            src="{{ section.settings.award1_image | image_url: width: 280 }}"
            alt="Award 1"
            loading="lazy"
          >
        {%- else -%}
          <img
            class="award-image"
            src="{{ 'awards/award1.png' | asset_url }}"
            alt="Award 1"
            loading="lazy"
          >
        {%- endif -%}
      </div>

      <!-- Award 2 -->
      <div class="award-item award-2">
        {%- if section.settings.award2_image != blank -%}
          <img
            class="award-image"
            src="{{ section.settings.award2_image | image_url: width: 280 }}"
            alt="Award 2"
            loading="lazy"
          >
        {%- else -%}
          <img
            class="award-image"
            src="{{ 'awards/award2.png' | asset_url }}"
            alt="Award 2"
            loading="lazy"
          >
        {%- endif -%}
      </div>

      <!-- Award 3 -->
      <div class="award-item award-3">
        {%- if section.settings.award3_image != blank -%}
          <img
            class="award-image"
            src="{{ section.settings.award3_image | image_url: width: 280 }}"
            alt="Award 3"
            loading="lazy"
          >
        {%- else -%}
          <img
            class="award-image"
            src="{{ 'awards/award3.png' | asset_url }}"
            alt="Award 3"
            loading="lazy"
          >
        {%- endif -%}
      </div>

      <!-- Award 4 -->
      <div class="award-item award-4">
        {%- if section.settings.award4_image != blank -%}
          <img
            class="award-image"
            src="{{ section.settings.award4_image | image_url: width: 280 }}"
            alt="Award 4"
            loading="lazy"
          >
        {%- else -%}
          <img
            class="award-image"
            src="{{ 'awards/award4.png' | asset_url }}"
            alt="Award 4"
            loading="lazy"
          >
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Awards",
  "settings": [
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Awards and Recognition"
    },
    {
      "type": "header",
      "content": "Award Images"
    },
    {
      "type": "image_picker",
      "id": "award1_image",
      "label": "Award 1 Image (Top Left)"
    },
    {
      "type": "image_picker",
      "id": "award2_image",
      "label": "Award 2 Image (Top Right)"
    },
    {
      "type": "image_picker",
      "id": "award3_image",
      "label": "Award 3 Image (Bottom Left)"
    },
    {
      "type": "image_picker",
      "id": "award4_image",
      "label": "Award 4 Image (Bottom Right)"
    }
  ],
  "presets": [
    {
      "name": "Custom Awards"
    }
  ]
}
{% endschema %}
