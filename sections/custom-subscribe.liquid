{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="color-{{ section.settings.color_scheme }} gradient content-container section-{{ section.id }}-padding{% if section.settings.full_width %} content-container--full-width{% endif %}">
    {%- if section.settings.heading != blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <div class="rte {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--fade-in{% endif %}">
        {{ section.settings.subheading }}
      </div>
    {%- endif -%}

    <div class="newsletter-form__field-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {% form 'customer', class: 'newsletter-form custom-subscribe-form' %}
        <input type="hidden" name="contact[tags]" value="{{ section.settings.customer_tag | escape }}">
        <div class="field">
          <input
            id="CustomSubscribe-{{ section.id }}"
            type="email"
            name="contact[email]"
            class="field__input"
            value="{{ form.email }}"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            placeholder="{{ section.settings.placeholder }}"
            {% if section.settings.required %}
              required
              aria-required="true"
            {% endif %}
            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="CustomSubscribe-error-{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="CustomSubscribe-success-{{ section.id }}"
            {% endif %}
          >
          <label class="field__label" for="CustomSubscribe-{{ section.id }}">
            {{ section.settings.label }}
          </label>
          <button type="submit" class="button button--primary">
            {{ section.settings.button_label }}
          </button>
        </div>

        {%- if form.errors -%}
          <small class="newsletter-form__message form__message" id="CustomSubscribe-error-{{ section.id }}">
            <span class="svg-wrapper">
              {{- 'icon-error.svg' | inline_asset_content -}}
            </span>
            {{ form.errors | default_errors }}
          </small>
        {%- endif -%}

        {%- if form.posted_successfully? -%}
          <p class="newsletter-form__message newsletter-form__message--success form__message" id="CustomSubscribe-success-{{ section.id }}" tabindex="-1" autofocus>
            <span class="svg-wrapper">
              {{- 'icon-success.svg' | inline_asset_content -}}
            </span>
            {{ section.settings.success_message }}
          </p>
        {%- endif -%}
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "订阅输入模块",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "全宽显示",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "配色方案",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "标题",
      "default": "立即订阅"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "标题字号",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "展示" }
      ],
      "default": "h2"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "副标题",
      "default": "<p>订阅以获取最新资讯<\/p>"
    },
    {
      "type": "text",
      "id": "label",
      "label": "输入框标签",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "输入框占位文案",
      "default": "your@email.com"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "按钮文案",
      "default": "Subscribe"
    },
    {
      "type": "checkbox",
      "id": "required",
      "label": "必填",
      "default": true
    },
    {
      "type": "text",
      "id": "customer_tag",
      "label": "创建客户时附加标签",
      "default": "custom-subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "提交成功提示",
      "default": "订阅成功！"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下边距",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "订阅输入模块"
    }
  ]
}
{% endschema %}
