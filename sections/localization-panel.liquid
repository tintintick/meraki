{{ 'component-localization-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .localization-panel__toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .localization-panel__content {
    padding: 2.4rem 1.6rem;
  }

  @media screen and (min-width: 750px) {
    .localization-panel__content {
      padding: 3.2rem;
      max-width: 520px;
      margin: 4rem auto;
    }
  }

  .localization-panel__forms localization-form + localization-form {
    margin-top: 2rem;
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="content-container color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding{% if section.settings.full_width %} content-container--full-width{% endif %}">
    {%- if section.settings.heading != blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <details-modal class="localization-panel">
      <details>
        <summary
          class="button button--primary localization-panel__toggle modal__toggle"
          aria-haspopup="dialog"
          aria-label="{{ section.settings.aria_label | default: section.settings.trigger_label }}"
        >
          <span>{{ section.settings.trigger_label }}</span>
        </summary>
        <div
          class="modal__content gradient"
          role="dialog"
          aria-modal="true"
          aria-label="{{ section.settings.aria_label | default: section.settings.trigger_label }}"
        >
          <div class="modal-overlay"></div>
          <div class="localization-panel__content" tabindex="-1">
            <button
              type="button"
              class="modal__close-button link link--text focus-inset"
              aria-label="{{ 'accessibility.close' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
            <div class="localization-panel__forms">
              {%- liquid
                assign show_country_selector = localization.available_countries.size > 1 and localization.available_countries != blank
                assign show_language_selector = localization.available_languages.size > 1 and localization.available_languages != blank
              -%}

              {%- if show_country_selector -%}
                <localization-form data-prevent-hide>
                  {%- form 'localization', id: 'LocalizationPanelCountryForm', class: 'localization-form' -%}
                    <div class="localization-form__select">
                      <h2 class="visually-hidden" id="LocalizationPanelCountryLabel">{{ 'localization.country_label' | t }}</h2>
                      {%- render 'country-localization', localPosition: 'LocalizationPanelCountry' -%}
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}

              {%- if show_language_selector -%}
                <localization-form data-prevent-hide>
                  {%- form 'localization', id: 'LocalizationPanelLanguageForm', class: 'localization-form' -%}
                    <div class="localization-form__select">
                      <h2 class="visually-hidden" id="LocalizationPanelLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                      {%- render 'language-localization', localPosition: 'LocalizationPanelLanguage' -%}
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}

              {%- if show_country_selector == false and show_language_selector == false -%}
                <p class="rte">{{ section.settings.empty_state_text }}</p>
              {%- endif -%}
            </div>
          </div>
        </div>
      </details>
    </details-modal>
  </div>
</div>

{% schema %}
{
  "name": "地区语言弹窗（测试）",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "全宽显示",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "配色方案",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "标题",
      "default": "切换国家 / 语言"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "标题字号",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "展示" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "trigger_label",
      "label": "按钮文案",
      "default": "选择地区与语言"
    },
    {
      "type": "text",
      "id": "aria_label",
      "label": "弹窗无障碍描述",
      "default": "切换商店地区与语言"
    },
    {
      "type": "richtext",
      "id": "empty_state_text",
      "label": "无可用选项时提示",
      "default": "<p>当前只配置了一个市场或语言，无法显示选择器<\/p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 28
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下边距",
      "default": 28
    }
  ],
  "presets": [
    {
      "name": "地区语言弹窗（测试）"
    }
  ]
}
{% endschema %}
