<div class="why-meraki-container" id="why-meraki-{{ section.id }}">
  <div class="container-default">
    {% if section.settings.main_heading != blank %}
      <h2 class="center index-section-header-h2">{{ section.settings.main_heading | newline_to_br }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class=" center index-section-subtitle-p">{{ section.settings.subtitle | newline_to_br }}</p>
    {% endif %}
    {% if section.settings.image != blank %}
      <div class="why-meraki-image">
        <picture>
          {% if section.settings.image_mobile != blank %}
            <source
              media="(max-width: 46.875rem)"
              srcset="{{ section.settings.image_mobile | image_url }}"
              width="{{ section.settings.image_mobile.width }}"
              height="{{ section.settings.image_mobile.height }}"
            >
          {% endif %}
          <img
            src="{{ section.settings.image | image_url }}"
            alt="{{ section.settings.image.alt }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            loading="eager"
          >
        </picture>
      </div>
    {% endif %}
    {% if section.blocks.size > 0 %}
      <div class="why-meraki-images">
        {% for block in section.blocks %}
          <div class="why-meraki-image-wrapper" id="why-meraki-image-{{ block.id }}" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url }}"
                alt="{{ block.settings.image.alt }}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                loading="eager"
              >
            {% endif %}
            <div class="why-meraki-image-content">
              <h3 class="why-meraki-image-title">{{ block.settings.title | newline_to_br }}</h3>
              <p class="why-meraki-image-description">{{ block.settings.description | newline_to_br }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Why Meraki",
  "tag": "section",
  "class": "why-meraki",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "main_heading",
      "label": "Main heading",
      "default": "H2 Heading"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Subtitle"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    }
  ],
  "blocks": [
    {
      "type": "featured_image",
      "name": "Featured image",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Meraki",
      "blocks": [
        {
          "type": "featured_image"
        },
        {
          "type": "featured_image"
        },
        {
          "type": "featured_image"
        },
        {
          "type": "featured_image"
        },
        {
          "type": "featured_image"
        },
        {
          "type": "featured_image"
        }
      ]
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const whyMerakiImages = document.querySelectorAll('.why-meraki-image-wrapper');
    whyMerakiImages.forEach((image, index) => {
      image.addEventListener('touchstart', function (e) {
        whyMerakiImages.forEach((img) => img.classList.remove('active'));
        this.classList.add('active');
      });
    });
    document.addEventListener('touchstart', function (e) {
      if (!e.target.closest('.why-meraki-image-wrapper')) {
        whyMerakiImages.forEach((img) => img.classList.remove('active'));
      }
    });
  });
</script>
