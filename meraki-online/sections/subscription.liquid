<style>
  .subscription-section {
    background-color: {{ section.settings.section_background }};
    padding: 6rem 2rem;
  }

  .subscription-title {
    color: {{ section.settings.title_color }};
    text-align: {{ section.settings.title_alignment }};
    margin-bottom: 3rem;
  }

  .subscription-form {
    display: flex;
    width: 100%;
    border: 0.1rem solid #525252;
    border-radius: 0.4rem;
    overflow: hidden;
    max-width: 56rem;
    margin: 0 auto;
    padding: 0.4rem;
    background: transparent;
    transition: border-color 0.3s ease;

  }

  .subscription-input:focus {
    border-color: {{ section.settings.active_border_color }};
  }

  .subscription-form:has(.subscription-input:focus) {
    border-color: {{ section.settings.active_border_color }};
  }

  .subscription-form:focus .subscription-input {
    outline: none;
    border: none;
    background-color: transparent;
  }
  .subscription-form *:focus-visible {
    outline: none;
    box-shadow: none;
  }

  .subscription-input {
    flex: 1 1 auto;
    height: 4.8rem;
    padding: 0.4rem 1.5rem;
    border: none;
    color: {{ section.settings.input_text_color }};
    background-color: transparent !important;
    font-size: 1.6rem;
    font-weight: 700;
    line-height: 1.25;
  }

  /* Override autofill background color */
  .subscription-input:-webkit-autofill,
  .subscription-input:-webkit-autofill:hover,
  .subscription-input:-webkit-autofill:focus,
  .subscription-input:-webkit-autofill:active {
    -webkit-box-shadow: 0 0 0 30px transparent inset !important;
    -webkit-text-fill-color: {{ section.settings.input_text_color }} !important;
    transition: background-color 5000s ease-in-out 0s;
  }

  .subscription-input:focus .subscription-input:focus-visible{
    outline: none;
    border: none;
    background-color: transparent;
  }

  .subscription-input::placeholder {
    color: {{ section.settings.placeholder_color }};
    opacity: {{ section.settings.placeholder_opacity | divided_by: 100.0 }};
  }

  .subscription-button {
    flex: 0 0 16.5rem;
    height: 4.8rem;
    border: none;
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    cursor: pointer;
    font-size: 1.6rem;
    font-weight: 700;
    line-height: 1.25;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .subscription-button:hover {
    opacity: 0.9;
  }

  .newsletter-form__message {
    max-width: 56rem;
    margin: 0 auto;
    margin-top: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .newsletter-form__message--success {
    color: #008060;
  }

  .form__message {
    font-size: 1.4rem;
  }

  .svg-wrapper {
    display: inline-flex;
    align-items: center;
  }
  @media screen and (max-width: 75rem) {
    .subscription-form {
      flex-direction: column;
      gap: 1.4rem;
      max-width: 100%;
      padding: 0;
      border: none;
    }

    .subscription-input {
      border: 0.1rem solid #525252;
      border-radius: 0.4rem;
      padding: 0.4rem 1.5rem;
    }

    .subscription-input:focus {
      border-color: {{ section.settings.active_border_color }};
    }
    .subscription-button {
      flex: 1 1 auto;
    }
  }
</style>

<div class="subscription-section">
  <div class="container-default">
    <h2 class="subscription-title">{{ section.settings.title }}</h2>
    {% form 'customer', id: 'subscription-form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input type="hidden" name="contact[accepts_marketing]" value="true">

      <div class="subscription-form">
        <input
          type="email"
          name="contact[email]"
          class="subscription-input"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            autofocus
            aria-invalid="true"
            aria-describedby="Newsletter-error--{{ section.id }}"
          {% elsif form.posted_successfully? %}
            aria-describedby="Newsletter-success--{{ section.id }}"
          {% endif %}
          placeholder="{{ section.settings.placeholder }}"
          required
        >
        <button type="submit" class="subscription-button">
          {{ section.settings.button_text }}
        </button>
      </div>

      {%- if form.errors -%}
        <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{- form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email -}}
        </small>
      {%- endif -%}

      {%- if form.posted_successfully? -%}
        <h3
          class="newsletter-form__message newsletter-form__message--success form__message"
          id="Newsletter-success--{{ section.id }}"
          tabindex="-1"
          autofocus
        >
          <span class="svg-wrapper">
            {{- 'icon-success.svg' | inline_asset_content -}}
          </span>
          {{- 'newsletter.success' | t }}
        </h3>
      {%- endif -%}
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Subscription",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#B5B5B5"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "section_background",
      "label": "Section Background Color",
      "default": "#080808"
    },
    {
      "type": "header",
      "content": "Input Field"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder Text",
      "default": "Enter your email"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder Color",
      "default": "#B5B5B5"
    },
    {
      "type": "range",
      "id": "placeholder_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Placeholder Opacity",
      "default": 70
    },
    {
      "type": "color",
      "id": "input_text_color",
      "label": "Input Text Color",
      "default": "#B5B5B5"
    },
    {
      "type": "color",
      "id": "active_border_color",
      "label": "Active Border Color",
      "default": "#6D3212"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#6D3212"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Subscription"
    }
  ]
}
{% endschema %}
