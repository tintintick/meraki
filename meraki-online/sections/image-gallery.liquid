<image-gallery
  class="image-gallery--container{% unless section.settings.full_width %} {% endunless %}"
  section-id="{{ section.id }}"
>
  <div class="max-md:px-0">
    <div class="gallery">
      {% for block in section.blocks %}
        <div data-index="{{ forloop.index0 }}" class="gallery-img" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 1212 }}"
              alt="Gallery image {{ forloop.index0 }}"
              loading="lazy"
              sizes="(min-width: 769px) 34vw, 100vw"
              srcset="{{ block.settings.image | image_url: width: 2400 }} 2400w, {{ block.settings.image | image_url: width: 1920 }} 1920w, {{ block.settings.image | image_url: width: 1440 }} 1440w, {{ block.settings.image | image_url: width: 1212 }} 1212w, {{ block.settings.image | image_url: width: 600 }} 600w, {{ block.settings.image | image_url: width: 300 }} 300w"
              width="1212"
              height="500"
            >
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'image-placeholder' }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</image-gallery>

{% schema %}
