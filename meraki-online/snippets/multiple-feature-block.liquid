<div class="multiple-feature-block" id="multiple-feature-block-{{ block.id }}" {{ block.shopify_attributes }}>
  {% if block.settings.function_description != blank %}
    <h3 class="multiple-feature-block__desc">
      {{ block.settings.function_description }}
    </h3>
  {% endif %}
  <div class="multiple-feature-block__main multiple-feature-block__main-{{ block.settings.video_position }}">
    <div class="multiple-feature-block__video">
      {% if block.settings.desk_video != blank %}
        {{-
          block.settings.desk_video
          | video_tag:
            playsinline: true,
            muted: true,
            loop: true,
            controls: false,
            preload: 'metadata',
            autoplay: false,
            loading: 'lazy',
            class: 'desktop-video'
        -}}
      {% endif %}
      {% if block.settings.mobile_video != blank %}
        {{-
          block.settings.mobile_video
          | video_tag:
            playsinline: true,
            muted: true,
            loop: true,
            controls: false,
            preload: 'metadata',
            autoplay: false,
            loading: 'lazy',
            class: 'mobile-video'
        -}}
      {% endif %}
      <div class="multiple-feature-block__video-text">
        {% if block.settings.video_title != blank %}
          <h4 class="multiple-feature-block__video-title">{{ block.settings.video_title }}</h4>
        {% endif %}
        {% if block.settings.video_subtitle != blank %}
          <p class="multiple-feature-block__video-subtitle">{{ block.settings.video_subtitle | newline_to_br }}</p>
        {% endif %}
      </div>
    </div>
    <div class="multiple-feature-block__features">
      {% for i in (1..3) %}
        {% assign img_key = 'image_' | append: i %}
        {% assign txt_key = 'text_' | append: i %}
        {% assign img = block.settings[img_key] %}
        {% assign txt = block.settings[txt_key] | newline_to_br %}
        {% if img != blank or txt != blank %}
          <div class="multiple-feature-block__feature">
            {% if img != blank %}
              <img
                src="{{ img | img_url: 'master' }}"
                alt="feature-{{ i }}"
                class="multiple-feature-block__feature-img"
                loading="lazy"
                width="320"
                height="180"
              >
            {% endif %}
            {% if txt != blank %}
              <div class="multiple-feature-block__feature-text">{{ txt }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="multiple-feature-block__icons">
    {% for i in (1..3) %}
      <div class="multiple-feature-block__icon-item">
        {% capture icon_key %}function_{{ i }}_icon{% endcapture %}
        {% capture text_key %}function_{{ i }}_text{% endcapture %}
        {% assign icon = block.settings[icon_key] %}
        {% assign text = block.settings[text_key] | newline_to_br %}
        {% if icon != blank %}
          <img
            src="{{ icon | img_url: 'master' }}"
            alt="icon-{{ i }}"
            class="multiple-feature-block__icon"
            loading="lazy"
            width="48"
            height="48"
          >
        {% else %}
          <div class="multiple-feature-block__icon-placeholder">icon</div>
        {% endif %}
        <div class="multiple-feature-block__icon-text">{{ text }}</div>
      </div>
    {% endfor %}
  </div>
</div>
